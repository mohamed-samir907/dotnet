@model IEnumerable<Clinic_System.BLL.ModelVM.DoctorVM.GetAllDoctorsVM>

@{
    ViewData["Title"] = "Manage Doctors";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-user-md"></i> Doctor Management
        </h1>
        <div>
            <button class="btn btn-info btn-sm shadow-sm" onclick="refreshTable()">
                <i class="fas fa-sync-alt fa-sm text-white-50"></i> Refresh
            </button>
            <a asp-controller="Doctor" asp-action="CreateDoctor" class="btn btn-success btn-sm shadow-sm">
                <i class="fas fa-user-plus fa-sm text-white-50"></i> Add Doctor
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Doctors</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-md fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Morning Shift</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(d => d.Shift == Clinic_System.DAL.Enum.Shift.Morning)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-sun fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Evening Shift</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(d => d.Shift == Clinic_System.DAL.Enum.Shift.Evening)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-moon fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Night Shift</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count(d => d.Shift == Clinic_System.DAL.Enum.Shift.Night)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctors Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="m-0 font-weight-bold text-primary">All Doctors</h6>
                </div>
                <div class="col-auto">
                    <div class="d-flex gap-2">
                        <select class="form-control form-control-sm" id="filterShift" style="width: 150px;">
                            <option value="">All Shifts</option>
                            <option value="Morning">Morning</option>
                            <option value="Evening">Evening</option>
                            <option value="Night">Night</option>
                        </select>
                        <div class="input-group input-group-sm" style="width: 250px;">
                            <input type="text" class="form-control" placeholder="Search doctors..." id="searchInput">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="doctorsTable" style="width: 100%">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Doctor</th>
                            <th>Contact</th>
                            <th>Department</th>
                            <th>Shift</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                            <tr>
                                <td>#@doctor.DoctorID</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm rounded-circle bg-primary d-flex align-items-center justify-content-center text-white mr-2">
                                            @($"{doctor.FirstName.FirstOrDefault()}{doctor.LastName.FirstOrDefault()}")
                                        </div>
                                        <div>
                                            <strong>Dr. @doctor.FirstName @doctor.LastName</strong>
                                            <br>
                                            <small class="text-muted">Doctor ID: @doctor.DoctorID</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong>@doctor.Email</strong>
                                    <br>
                                    <small class="text-muted">@doctor.Phone</small>
                                </td>
                                <td>
                                    @if (doctor.Department != null)
                                    {
                                        <span class="badge badge-info">@doctor.Department.Name</span>
                                        <br>
                                        <small class="text-muted">@doctor.Department.Description</small>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">No Department</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        string shiftClass = doctor.Shift == Clinic_System.DAL.Enum.Shift.Morning ? "success" :
                                                          doctor.Shift == Clinic_System.DAL.Enum.Shift.Evening ? "warning" : "info";
                                    }
                                    <span class="badge badge-@shiftClass">@doctor.Shift</span>
                                </td>
                                <td><span class="badge badge-success">Active</span></td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-outline-primary btn-sm" title="View Profile" onclick="viewDoctor('@doctor.DoctorID')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <a asp-controller="Doctor" asp-action="EditDoctor" asp-route-id="@doctor.DoctorID" class="btn btn-outline-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-outline-danger btn-sm" title="Delete" onclick="deleteDoctor('@doctor.DoctorID')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning"></i> Confirm Delete
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this doctor? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-controller="Doctor" asp-action="DeleteDoctor">
                    <input type="hidden" name="ID" id="deleteId" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Doctor
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 14px;
    font-weight: bold;
}

.btn-group .btn {
    border-radius: 4px !important;
    margin-right: 2px;
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #5a5c69;
    font-size: 0.85rem;
    text-transform: uppercase;
}

.table td {
    vertical-align: middle;
}

.badge {
    font-size: 0.75rem;
    padding: 0.375rem 0.75rem;
}

#doctorsTable tbody tr:hover {
    background-color: #f8f9fc;
}

.d-flex.gap-2 > * {
    margin-right: 0.5rem;
}

.d-flex.gap-2 > *:last-child {
    margin-right: 0;
}
</style>

<script>
function refreshTable() {
    location.reload();
}

function viewDoctor(id) {
    alert('View doctor profile: ' + id);
}

function deleteDoctor(id) {
    document.getElementById('deleteId').value = id;
    $('#deleteModal').modal('show');
}

// Search functionality
document.getElementById('searchInput').addEventListener('keyup', function() {
    const searchValue = this.value.toLowerCase();
    const table = document.getElementById('doctorsTable');
    const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

    for (let i = 0; i < rows.length; i++) {
        const row = rows[i];
        const cells = row.getElementsByTagName('td');
        let found = false;

        for (let j = 0; j < cells.length; j++) {
            if (cells[j].textContent.toLowerCase().indexOf(searchValue) > -1) {
                found = true;
                break;
            }
        }

        if (found) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    }
});

// Shift filter
document.getElementById('filterShift').addEventListener('change', function() {
    const filterValue = this.value.toLowerCase();
    const table = document.getElementById('doctorsTable');
    const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

    for (let i = 0; i < rows.length; i++) {
        const row = rows[i];
        const shiftCell = row.getElementsByTagName('td')[4];
        
        if (filterValue === '' || shiftCell.textContent.toLowerCase().indexOf(filterValue) > -1) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    }
});
</script>