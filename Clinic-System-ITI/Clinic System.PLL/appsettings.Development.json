{
    "ConnectionStrings": {
        "DefaultConnection": "Server=.;Database=RoyalClinicITI;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true"
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "AllowedHosts": "*",

    "applicationSettings": {
        "SmtpServer": "smtp.yourserver.com", // استبدل بهذا عنوان الخادم SMTP الخاص بك
        "SmtpPort": 587, // عادةً 587 للبريد الآمن (TLS/STARTTLS)
        "SmtpUser": "your_email@example.com", // بريدك الإلكتروني
        "SmtpPassword": "your_email_password", // كلمة المرور الخاصة بالبريد
        "SmtpFrom": "your_email@example.com", // البريد الإلكتروني المُرسل
        "SmtpDisplayName": "Royal Clinic" // اسم العرض (اختياري)
    }
}
